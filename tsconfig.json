{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015",
      "es2015.promise",
      "es2016.array.include",
      "es2018",
      "es2020",
      "es2022"
    ],
    "paths": {
      "@mocks": ["./__mocks__"],
      "@tools": ["./tools"],
    },
    "resolveJsonModule": true,
    "noEmit": true,
    "target": "esnext"
  }
}
